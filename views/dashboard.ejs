      <h2>E-Mails abrufen</h2>
      <form action="/fetch-emails" method="POST" class="row g-3">
        <div class="col-auto">
          <input type="date" name="sinceDate" class="form-control" required>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">E-Mails abrufen</button>
        </div>
      </form>
    </div>
    
    <h2 class="mt-4">Status deiner Abfrage</h2>
<p><%= imapStatus %></p>

<h2 class="mt-4">Gefundene Leads</h2>

<% if (leads.length > 0) { %>
  <% leads.forEach(function(lead) { %>
    <div class="card my-3 p-3">
      <h5><%= lead.subject %> (von <%= lead.from %>)</h5>
      <ul class="list-group mt-2">
        <% for (const [key, value] of Object.entries(lead.data)) { %>
          <li class="list-group-item">
            <strong><%= key %>:</strong> <%= value %>
          </li>
        <% } %>
        <a href="/import-customer/<%= lead.data.leadId %>" class="btn btn-success btn-sm">
          Kunde importieren
        </a>
        <a href="/import-lead/<%= lead.data.leadId %>" class="btn btn-primary btn-sm">
          Lead importieren
        </a>



        


      </ul>
    </div>
  <% }); %>
<% } else { %>
  <p>Keine Leads gefunden.</p>
<% } %>




